<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.MessageMapper">

	<resultMap type="com.board.domain.MessageVO" id="MessageSelectRM">
		<result property="roomId" column="room_id" />
		<result property="prdtId" column="product_id" />
		<result property="buyer" column="buyer" />
		<result property="seller" column="seller" />
		<collection property="productVO" resultMap="productSelectRM"/>
	</resultMap>
	
	<resultMap type="com.board.domain.ProductVO" id="productSelectRM">
		<result property="prdtName" column="product_name" />
		<result property="prdtPrice" column="product_price" />
		<result property="prdtTradeStatus" column="product_trade_status" />
	</resultMap>

	<insert id="sendMessage">
		INSERT INTO message(product_id, buyer, seller, content)
		VALUES(#{prdtId}, #{buyer}, #{seller}, #{content})
	</insert>
	
	<select id="getMessageList" parameterType="String" resultType="com.board.domain.MessageVO" resultMap="MessageSelectRM">
		SELECT 
			a.product_name, 
			a.product_price, 
			a.product_trade_status, 
			b.seller,
			b.room_Id
		FROM 
			product a INNER JOIN chat_room b
		ON 
			a.product_id = b.product_id
		WHERE 
			b.buyer = #{buyer}
		OR
			b.seller = #{buyer}
	</select>
	
	<select id="getMessage" parameterType="String" resultType="String">
		SELECT room_id FROM message
		WHERE product_id = #{prdtId} AND buyer = #{buyer} AND seller = #{seller}
	</select>

</mapper>